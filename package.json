{
  "name": "proyecname",
  "version": "1.0.0",
  "description": "Demo project for SonarQube integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml"
  }
}